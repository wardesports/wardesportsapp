<div class="header">
	<div class="inner">
		<div class="logo">
			<%= link_to image_tag('logo.png'), root_path, :class => 'navbar-link' %>
		</div>

		<div class="user-options">
			<div>
				<% if user_signed_in? %>
				    <%= link_to "All Events", events_path, :class => 'btn btn-primary' %> 
				    <%= link_to "Upcoming", user_path(current_user), :class => 'btn btn-primary' %> 
				    <%if organizer? %>
				    <%= link_to "Organizer", user_organizer_index_path(current_user), :class => 'btn btn-primary' %> 
				    <%end %>
				    <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link btn btn-primary' %> 
				    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link btn btn-primary'  %> 
				  <% else %>
				    <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link btn btn-primary'  %>
    				<%= link_to "Login", new_user_session_path, :class => 'navbar-link btn btn-primary'  %>
				<% end %>
			</div>
		</div>
	</div>
</div>
